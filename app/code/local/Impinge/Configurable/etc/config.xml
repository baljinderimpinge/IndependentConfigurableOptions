<?xml version="1.0"?>
<config>
    <modules>
        <Impinge_Configurable>
            <version>0.1.1</version>
        </Impinge_Configurable>
    </modules>
    <global>
        <models>
            <configurable>
                <class>Impinge_Configurable_Model</class>
            </configurable>
        </models>
        <blocks>
            <configurable>
                <class>Impinge_Configurable_Block</class>
            </configurable>
            <catalog>
                <rewrite>
                    <product_view_type_configurable>Impinge_Configurable_Block_Frontend_Configurable</product_view_type_configurable>
                </rewrite>
            </catalog>
        </blocks>
    </global>
    <frontend>
        <layout>
            <updates>
                <configurable module="Impinge_Configurable">
                    <file>configurable.xml</file>
                </configurable>
            </updates>
        </layout>
    </frontend>
</config>